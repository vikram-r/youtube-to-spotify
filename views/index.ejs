<% include header %>
<div class="container">
  <form id="playlist-url-form">
    <div class="form-group">
      <label for="playlist-url-input">YouTube Playlist URL</label>
      <input type="text" id="playlist-url-input" class="form-control" placeholder="Enter URL" required>
    </div>
    <div>
      <button class="btn btn-primary" type="submit">Button</button>
      <i id="playlist-url-spinner" class="zmdi zmdi-spinner zmdi-hc-spin hidden"></i>
    </div>
  </form>
  <div id="playlist-list-container"></div>

</div>

<script id="playlist-list-template" type="text/x-handlebars-template">
  <ul class="list-group">
    {{#.}}
      {{> playlist-list-item}}
    {{else}}
       <li class="list-group-item">Nothing</li>
    {{/.}}
  </ul>
</script>

<script id="playlist-list-item-template" type="text/x-handlebars-template">
  <li class="list-group-item">
    <a href={{idToYoutubeLink id}}>{{name}}</a>
  </li>
</script>


<script src="/bower_components/handlebars/handlebars.min.js"></script>
<script src="/js/controller.js"></script>


<% include footer %>
